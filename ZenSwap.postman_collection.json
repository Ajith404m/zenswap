{
  "info": {
    "name": "ZenSwap API",
    "description": "Complete API collection for ZenSwap marketplace platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "listing_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('user_id', jsonData.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"test123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('user_id', jsonData.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"test123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{user_id}}"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"email\": \"updated@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{user_id}}"]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{user_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Listings",
      "item": [
        {
          "name": "Create Listing (Sell)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('listing_id', jsonData.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"sell\",\n  \"title\": \"iPhone 14 Pro Max\",\n  \"description\": \"Brand new, sealed box\",\n  \"price\": 1099,\n  \"currency\": \"USD\",\n  \"location\": \"New York, NY\",\n  \"condition\": \"new\",\n  \"category\": \"Electronics\",\n  \"tags\": \"iphone,apple,smartphone\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/listings",
              "host": ["{{base_url}}"],
              "path": ["api", "listings"]
            }
          }
        },
        {
          "name": "Create Listing (Rent)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"rent\",\n  \"title\": \"Camera Equipment - Sony A7III\",\n  \"description\": \"Professional camera with lenses\",\n  \"price\": 50,\n  \"currency\": \"USD\",\n  \"location\": \"Los Angeles, CA\",\n  \"condition\": \"excellent\",\n  \"category\": \"Photography\",\n  \"availability\": {\n    \"start\": \"2025-10-05\",\n    \"end\": \"2025-12-31\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/listings",
              "host": ["{{base_url}}"],
              "path": ["api", "listings"]
            }
          }
        },
        {
          "name": "Get All Listings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/listings",
              "host": ["{{base_url}}"],
              "path": ["api", "listings"]
            }
          }
        },
        {
          "name": "Get Listings by Type",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/listings?type=sell",
              "host": ["{{base_url}}"],
              "path": ["api", "listings"],
              "query": [
                {
                  "key": "type",
                  "value": "sell"
                }
              ]
            }
          }
        },
        {
          "name": "Search Listings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/listings?q=iphone",
              "host": ["{{base_url}}"],
              "path": ["api", "listings"],
              "query": [
                {
                  "key": "q",
                  "value": "iphone"
                }
              ]
            }
          }
        },
        {
          "name": "Filter by Category and Price",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/listings?category=Electronics&priceMax=1000",
              "host": ["{{base_url}}"],
              "path": ["api", "listings"],
              "query": [
                {
                  "key": "category",
                  "value": "Electronics"
                },
                {
                  "key": "priceMax",
                  "value": "1000"
                }
              ]
            }
          }
        },
        {
          "name": "Update Listing",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 999,\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/listings/{{listing_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "listings", "{{listing_id}}"]
            }
          }
        },
        {
          "name": "Delete Listing",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/listings/{{listing_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "listings", "{{listing_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Offers",
      "item": [
        {
          "name": "Create Offer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"counter\",\n  \"message\": \"Would you accept $950?\",\n  \"price\": 950\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/listings/{{listing_id}}/offers",
              "host": ["{{base_url}}"],
              "path": ["api", "listings", "{{listing_id}}", "offers"]
            }
          }
        },
        {
          "name": "Get Offers for Listing",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/listings/{{listing_id}}/offers",
              "host": ["{{base_url}}"],
              "path": ["api", "listings", "{{listing_id}}", "offers"]
            }
          }
        }
      ]
    }
  ]
}
